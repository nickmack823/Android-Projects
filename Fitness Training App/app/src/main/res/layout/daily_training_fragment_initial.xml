<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/dailyChallengeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="17dp"
        android:text="Daily Challenge"
        app:layout_constraintBottom_toTopOf="@+id/dailyChallengeHint"
        app:layout_constraintEnd_toEndOf="@+id/dailyChallengeHint" />

    <TextView
        android:id="@+id/dailyChallengeHint"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="256dp"
        android:text="The Daily Challenge goes through each of the exercises in the app, with a 10 second rest period in between each exercise."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/getReadyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:text="Get Ready"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/dailyChallengeButton"
        app:layout_constraintTop_toTopOf="@+id/dailyChallengeButton"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>